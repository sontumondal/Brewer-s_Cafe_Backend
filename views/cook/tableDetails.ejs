            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
        }

        .preparing input[type="radio"]:checked+.check_transfer {
            opacity: 1;
            background-color: orangered;
        }
        .done input[type="radio"]:checked+.check_transfer {
