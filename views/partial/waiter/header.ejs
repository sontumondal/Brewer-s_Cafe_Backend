  <style>
    body {
      font-family: "Raleway", sans-serif;
      ;
    }

    /* Basic styles for the modal */
    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgb(0 0 0 / 76%);
      backdrop-filter: blur(5px);
      /* padding-top: 60px; */
    }

    .modal-content h2{
      background-color: #000;
      color: #fff;
      text-align: center;
    }
    .modal-content button{
      max-width: calc(290px - 100px);
      width: 100%;
      margin: auto;
      text-align: center;
      border: 1px solid currentColor;
      color:  #fff;
      padding: 10px;
      border-radius: 50px;
      opacity: 80%;
      transition: all 0.3s;
    }
    .modal-content button:hover{
      opacity: 100%;
      box-shadow: 0 6px 15px #c2c1c1;
    }
    .modal-content .main_form_wrapper{
      display: flex;
      align-items: center;
      flex-direction: column;
      gap: 10px;
    }
    .modal-content .main_form_wrapper form{
      width: 100%;
    }
    .modal-content button.wait{
      background-color: #888888;
    }
    .modal-content button.new{
      background-color: red;
    }
    .modal-content button.served{
      background-color: green;
    }
    .modal-content button.delivered{
      background-color: transparent;
      color: #000;
    }
    .modal-content {
      text-align: center;
      background-color: #fefefe;
      margin: auto;
      padding: 20px;
      border: 1px solid #888;
      width: 95%;
      max-width: 290px;
      position: absolute;
      top: 50%;
      left: 0;
      right: 0;
      transform: translateY(-50%);
      z-index: 1;
    }

    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
      position: absolute;
      right: -10px;
      top: -8px;
      background: #e1e1e1;
      color: #000;
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 100%;
    }

    .close:hover,
    .close:focus {
      color: black;
      text-decoration: none;
      cursor: pointer;
    }
  </style>
</head>

