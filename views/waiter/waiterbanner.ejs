<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <style>
        .main_waiter_banner{
            position: relative;
            height: 100vh;
            overflow: hidden;
        }
        .main_waiter_banner .btn{
            position: absolute;
            top: 40%;
            left: 59%;
            transform: translate(-50% , -50%);
            background-color: #000;
            color: #fff;
            font-size: 18px;
            border-radius: 50px;
            padding: 7px 30px;
            display: inline-block;
            max-width: 150px;
            width: 100%;
            font-weight: 600;
            border: 1px solid #000;
            transition: 0.3s;
        }
        .main_waiter_banner .btn:hover{
            background-color: transparent;
            color: #000;
        }
        .main_waiter_banner img{
            width: 100%;
            height: 100vh;
            object-fit: cover;
        }
        figure{
            width: 100%;
            height: 100vh;
            background-size: 100% 100%;
            background-repeat: no-repeat;
        }
    </style>
  </head>
  <body>
    <div class="main_waiter_banner">
        <figure style="background-image: url(/images/waiter-banner-01.jpg);"></figure>
        <a href="/waiter/login" class="btn">Login</a>
    </div>
  </body>
</html>
